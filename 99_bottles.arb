        10 => "ten",
        9 => "nine",
        8 => "eight",
        7 => "seven",
        6 => "six",
        5 => "five",
        4 => "four",
        3 => "three",
        2 => "two",
        1 => "one",
      }
    word = ""  
    numbers_to_name.each do |index, name|
      if int == 0
        return word + "no"
      elsif int.to_s.length == 1 && int/index > 0
        return word + "#{name}"      
      elsif int < 100 && int/index > 0
        return word + "#{name}" if int%index == 0
        return word + "#{name} " + in_words(int%index)
      elsif int/index > 0
        return word + in_words(int/index) + " #{name} " + in_words(int%index)
      end
    end
end

