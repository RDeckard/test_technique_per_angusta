#!/usr/bin/ruby

def roman_integer(roman_value)
    case roman_value
    when roman_value = "M"
        return 1000
    when roman_value = "D" 
        return 500
    when roman_value = "C"
        return 100
    when roman_value = "L"
        return 50
    when roman_value = "X"
        return 10
    when roman_value = "V"
        return 5
    when roman_value = "I"
        return 1  
    else
        return 0                                 
    end 
end 
  
def roman_to_number(roman)
    print "What roman numeral do you want: "
    roman = gets.chomp    
    number = roman_integer(roman[0])
    i = 1
    while i < roman.length        
        current_roman = roman_integer(roman[i])
        previous_roman = roman_integer(roman[i-1])
        if current_roman <= previous_roman
            number = number + current_roman
        else
            number = number-(previous_roman*2)+current_roman            
        end
        i += 1
    end    
    puts number  
end
